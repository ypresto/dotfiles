snippet zero
        <TMPL_IF EXPR="0"><!-- ${1} --></TMPL_IF>

snippet if
        <TMPL_IF EXPR="${1}">${2}</TMPL_IF>

snippet ifn
        <TMPL_IF NAME="${1}">${2}</TMPL_IF>

snippet unless
        <TMPL_UNLESS EXPR="${1}">${2}</TMPL_IF>

snippet unlessn
        <TMPL_IF NAME="${1}">${2}</TMPL_IF>
